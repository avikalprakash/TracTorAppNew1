<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#bc9842"
            android:textSize="20dp"
            android:text="Comments &amp; Suggestions"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#ffffff"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                android:inputType="text"
                android:layout_margin="10dp"
                android:id="@+id/ratnme_edtxt"
                android:background="#ffffff"
                android:hint="Name"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.20dp"
                android:layout_centerVertical="true"
                android:background="#000000"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000000"
                android:layout_margin="10dp"
                android:id="@+id/ratemail_edtxt"
                android:inputType="textEmailAddress"
                android:background="#ffffff"
                android:hint="Email"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/pleasetxt"
            android:background="#ffffff"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:hint="Comments &amp; Suggestion "
                android:textColorHint="#000000"
                android:maxLength="1000"
                android:id="@+id/ratsuggestion_edtxt"
                android:backgroundTint="@android:color/transparent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:gravity="center"
            android:text="Tap to record comment and suggestion"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:padding="20dp"
            android:src="@drawable/recordcom"
            android:background="@drawable/btn1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/soundBtn"
            />
        <Chronometer
            android:id="@+id/chrono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            />

       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textColor="#bc9842"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:text="Rate Us"/>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/StarRatingBar"
                android:numStars="5"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
                android:stepSize="1.0"
                />
        </LinearLayout>-->


        <Button
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn1"
            android:textColor="#ffff"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/chrono"
            android:layout_marginLeft="15dp"
            android:text="Submit"/>
    </LinearLayout>
</ScrollView>
