<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative1"
        android:background="#000000">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="News &amp; Buletin"
            android:id="@+id/title"
            android:textColor="#bc9842"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LATEST"
            android:id="@+id/latest"
            android:layout_below="@+id/title"
            android:layout_marginLeft="20dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:textColor="#ffffff"
            />
    <android.support.v4.view.ViewPager
        android:scaleType="centerCrop"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/latest"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewPager"
        android:id="@+id/text1"
        android:visibility="gone"
        android:text="New Lunch Deals and seats Available!"
        android:textColor="#ffffff"
        android:layout_marginTop="5sp"
        android:textSize="18dp"
        android:gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_below="@+id/text1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bc9842"
            android:textSize="15sp"
            android:text="Cloud 9"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeText"
            android:layout_alignParentRight="true"
            android:textColor="#bc9842"
            android:text="09:07 am | 08 Aug"
            android:textSize="15sp"/>
    </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:id="@+id/view"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_below="@+id/relative1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:text="RECENT NEWS"
        android:textColor="#ffffff"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/text"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative2"
        android:layout_below="@id/text"
        android:layout_marginTop="10dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listFrame"></FrameLayout>
    </RelativeLayout>
</RelativeLayout>
