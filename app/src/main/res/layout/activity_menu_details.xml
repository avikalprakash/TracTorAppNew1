<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lueinfo.tractorapp.MenuDetails"
    android:background="#000000">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Menu"
        android:id="@+id/text"
        android:textSize="18sp"
        android:textColor="#bc9842"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/text"
        android:id="@+id/item_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/c"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/item_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/heart"
        android:id="@+id/logout"
        android:layout_marginRight="20dp"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toEndOf="@+id/logout"
    android:layout_below="@+id/item_image"
    android:layout_marginTop="15dp"
    android:id="@+id/text2"
    android:text="POPULAR MENU"
    android:textSize="15dp"
    android:textStyle="bold"
    android:textColor="#ffffff"/>
    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Spicy Chicken Roast"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#bc9842"
        android:textSize="15dp"
        android:id="@+id/prod_name"
        android:layout_below="@+id/text2"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text2"
        android:textColor="#bc9842"
        android:text="CLOUD 9"
        android:textSize="12dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#696969"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="RM 25.00"
        android:textSize="15dp"
        android:id="@+id/text3"
        android:layout_below="@+id/prod_name"/>
    <View
        android:layout_width="65dp"
        android:layout_height="2dp"
        android:background="#696969"
        android:layout_below="@+id/prod_name"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/text3"
        android:layout_below="@+id/prod_name"
        android:layout_marginTop="15dp"
        android:text="RM 18.00"
        android:id="@+id/price"
        android:textColor="#ffd700"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="#ffffff"
        android:layout_below="@+id/price"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView"
    android:layout_below="@+id/view"
    android:layout_marginTop="15dp"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/description"
        android:gravity="center"
        android:textColor="#ffffff"
        />
</ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:background="#ffffff"
        android:layout_below="@+id/scrollView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Buy Now"
        android:id="@+id/buynow"
        android:layout_below="@+id/view2"
        android:layout_marginBottom="40dp"
        android:textColor="#ffffff"
        android:background="#228b22"
        android:layout_marginTop="20dp"
       />
</RelativeLayout>
</ScrollView>