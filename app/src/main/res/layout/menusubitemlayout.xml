<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/i"
        android:layout_margin="10dp"
        android:background="#ffffff">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/apture"
            android:id="@+id/grid_image"/>
        <!--  <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:src="@drawable/favorite"
              android:layout_marginLeft="220dp"
              android:layout_marginTop="10dp"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid_image"
            android:text="Spicy Chicken Roast for"
            android:layout_marginLeft="5dp"
            android:textSize="12dp"
            android:maxLength="23"
            android:id="@+id/griddetail_text"
            android:textColor="#bc9842"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/griddetail_text"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RM 18.00"
                android:textSize="12dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:id="@+id/gridtime_text"
                />
            <Button
                android:layout_width="60dp"
                android:id="@+id/gridcal_text"
                android:layout_height="25dp"
                android:text="Buy"
                android:background="#458b00"
                android:textSize="12sp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:layout_toEndOf="@+id/gridtime_text"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/gridtime_text" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>