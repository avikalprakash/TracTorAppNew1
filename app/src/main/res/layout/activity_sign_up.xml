<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lueinfo.tractorapp.SignUp"
    android:background="#303030">

    <!-- RelativeLayout of username  with Icon-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="70dp"
        android:id="@+id/relativeUsername">
        <!-- Edittext of username -->
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/uername_edtxt"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textColorHint="#000000"
            android:layout_marginRight="45dp"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:backgroundTint="@android:color/transparent"/>
        <!-- ImageView of username -->
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/profilee"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/relativeGender"
        android:layout_below="@+id/relativeUsername">
<!--<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Gender"
    android:id="@+id/gender"
    android:layout_centerVertical="true"
    android:textSize="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"/>-->
        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:entries="@array/gender_select"
            android:padding="10dp"
            android:layout_centerVertical="true"/>

        <EditText
            android:layout_width="0dp"
            android:id="@+id/spin_edtxt"
            android:layout_height="0dp"
            android:hint="Username"
            android:layout_toRightOf="@+id/spinner1"
            android:padding="10dp"
            android:layout_below="@+id/spinner1"
            android:backgroundTint="@android:color/transparent"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/relativeEmail"
        android:layout_below="@+id/relativeGender">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_marginRight="45dp"
            android:layout_centerVertical="true"
            android:id="@+id/email_edtxt"
            android:textColorHint="#000000"
            android:paddingLeft="20dp"
            android:backgroundTint="@android:color/transparent"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/email"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/relativeMobile"
        android:layout_below="@+id/relativeEmail">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mobile No."
            android:layout_marginRight="45dp"
            android:layout_centerVertical="true"
            android:id="@+id/mobileno_edtxt"
            android:paddingLeft="20dp"
            android:textColorHint="#000000"
            android:backgroundTint="@android:color/transparent"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/mobile"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/relativePassword"
        android:layout_below="@+id/relativeMobile">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pass_edtxt"
            android:textColorHint="#000000"
            android:hint="Password"
            android:layout_marginRight="45dp"
            android:inputType="textPassword"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:backgroundTint="@android:color/transparent"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/lock"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativePassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/signup"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        android:background="#8b6914"/>
</RelativeLayout>
