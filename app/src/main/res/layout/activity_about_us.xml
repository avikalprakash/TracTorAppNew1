        android:orientation="vertical"
        android:layout_height="match_parent">

    <WebView
        android:id="@+id/para1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <WebView
        android:id="@+id/para2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

    <WebView
        android:id="@+id/para3"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        />


    <WebView
        android:id="@+id/para4"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

        <WebView
            android:id="@+id/para5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <WebView
            android:id="@+id/para6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <WebView
            android:id="@+id/para7"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <WebView
            android:id="@+id/para8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <WebView
            android:id="@+id/para9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </ScrollView>

</LinearLayout>
