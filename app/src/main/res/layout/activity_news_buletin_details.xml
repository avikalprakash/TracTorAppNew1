<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/relative"
        android:background="#000000">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="News &amp; Buletin"
        android:id="@+id/title"
        android:textColor="#bc9842"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="20dp"
            android:text="LATEST"
            android:id="@+id/text"
            android:textColor="#ffffff"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout"
        android:id="@+id/titleName"
        android:layout_marginTop="18dp"
        android:textColor="#ffffff"
        android:textSize="15dp"
        android:layout_marginLeft="15dp"
        android:text="January lunch sets and special offers."/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bc9842"
        android:id="@+id/time"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/titleName"
        android:text="09:07 am | 08 Aug"
        android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cloud 9"
            android:id="@+id/text2"
            android:textColor="#bc9842"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/titleName"
            android:layout_marginLeft="15dp"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ffffff"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text2"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/text"
        android:id="@+id/logout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/image_1"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_below="@+id/relative"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:text="jkjbhbhjbhjdsbhbvhbhjvbhbvhvfbhbhdbvhbsububusvbuvbubudbsusbubsdbsvbuvbvdusbusbuubsdbdub ub bdbduy"
            android:textColor="#ffffff"
       android:id="@+id/textDetails"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
