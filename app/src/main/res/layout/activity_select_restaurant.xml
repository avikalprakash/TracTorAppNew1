<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.lueinfo.tractorapp.SelectRestaurant">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/logout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/shutdown"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="320dp"
            />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Select Your Restaurant"
    android:textColor="#8b6914"
    android:id="@+id/text1"
    android:layout_centerHorizontal="true"
    android:textSize="15dp"
    android:layout_marginTop="40dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view1"
        android:background="#dcdcdc"
        android:layout_below="@+id/text1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/view1"
        android:layout_marginTop="10dp"
        android:id="@+id/relative1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/layout1">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:src="@drawable/llgc"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pavilion Kl"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout1"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/newcloud"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:background="#dcdcdc"
        android:layout_below="@+id/relative1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/view2"
        android:layout_marginTop="20dp"
        android:id="@+id/relative2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/layout2">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/newg9log"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pavilion Kl"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout2"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/newgeo" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view3"
        android:background="#dcdcdc"
        android:visibility="gone"
        android:layout_below="@+id/relative2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/view3"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:id="@+id/relative3"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/layout3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EPICSSOUL"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/layout3"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:src="@drawable/c"/>
    </RelativeLayout
        >
    </RelativeLayout>
</ScrollView>
