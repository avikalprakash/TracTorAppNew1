<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.lueinfo.tractorapp.GeowinePack.GeoGallery">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bc9842"
            android:text="Gallery"
            android:id="@+id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textSize="15dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view"
            android:background="#ffffff"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/text1"/>

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/camera"
            android:padding="15dp"
            android:layout_marginTop="0dp"
            android:layout_below="@+id/view"
            android:layout_centerHorizontal="true"
            android:src="@drawable/gallery"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/camera"
            android:layout_marginTop="0dp"
            android:id="@+id/relativeCaption">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/captiontxt"
                android:hint="Add Caption Here"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:backgroundTint="@android:color/transparent"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeCaption"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="PHOTO OF THE WEEK"
            android:textColor="#ffffff"
            android:id="@+id/text2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/imageshow_layout"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_below="@+id/text2"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/lin1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/gallerynewimg"
                        android:id="@+id/img1"
                        android:layout_margin="5dp"
                        android:layout_height="120dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:id="@+id/uptxt1"
                        android:textSize="10dp"
                        android:text="GGG"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/lin2"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/gallerynewimg"
                        android:id="@+id/img2"
                        android:layout_margin="5dp"
                        android:layout_height="120dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:id="@+id/uptxt2"
                        android:textSize="10dp"
                        android:text="GGG"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/lin3"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/gallerynewimg"
                        android:layout_margin="5dp"
                        android:id="@+id/img3"
                        android:layout_height="120dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:id="@+id/uptxt3"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:text="GGG"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:id="@+id/lin4"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/gallerynewimg"
                        android:id="@+id/img4"
                        android:layout_margin="5dp"
                        android:layout_height="120dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:id="@+id/uptxt4"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:text="GGG"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/lin5"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/gallerynewimg"
                        android:layout_margin="5dp"
                        android:id="@+id/img5"
                        android:layout_height="120dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:id="@+id/uptxt5"
                        android:textSize="10dp"
                        android:gravity="center"
                        android:text="GGG"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:id="@+id/lin6"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/gallerynewimg"
                        android:id="@+id/img6"
                        android:layout_margin="5dp"
                        android:layout_height="120dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:gravity="center"
                        android:id="@+id/uptxt6"
                        android:textSize="10dp"
                        android:text="GGG"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:text="SUBMIT PHOTO"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="#8b6914"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/imageshow_layout"
            android:textColor="#ffffff"/>

    </RelativeLayout>
</ScrollView>