<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.lueinfo.tractorapp.SongRequestDetails">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:textColor="#bc9842"
    android:id="@+id/text1"
    android:text="Song Request Details"
    android:textSize="15dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/text1"
        android:src="@drawable/music"
        android:id="@+id/image1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/image1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Song Name"
        android:id="@+id/text2"
        android:textColor="#838b8b"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:textColor="#ffffff"
        android:text="Spacemen"
        android:id="@+id/songName"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Artist"
        android:id="@+id/text3"
        android:textColor="#838b8b"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:textColor="#ffffff"
        android:text="Hardwell"
        android:id="@+id/artist"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Dedicated to"
        android:id="@+id/text4"
        android:textColor="#838b8b"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:textColor="#ffffff"
        android:text="Nicky"
        android:id="@+id/dedicatedTo"
        android:textSize="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Message"
        android:id="@+id/text5"
        android:textColor="#838b8b"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text4"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:textColor="#ffffff"
        android:layout_marginRight="30dp"
        android:text="Congrats on the new project. Good luck!"
        android:id="@+id/message"
        android:textSize="15dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view2"
        android:background="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@+id/message"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="30dp"
        android:background="#bc9842"
        android:id="@+id/normalSong"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Normal Song Request"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/normalSong"
        android:id="@+id/requestSong"
        android:layout_marginTop="10dp"
        android:background="#bc9842"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Request Song Using Tips"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestSong"
        android:layout_marginTop="10dp"
        android:background="#bc9842"
        android:id="@+id/paidSong"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="Paid Song Request"
        android:textColor="#ffffff"
        android:textAllCaps="false"/>
</RelativeLayout>
