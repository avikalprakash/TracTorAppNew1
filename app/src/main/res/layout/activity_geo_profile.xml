<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Profile"
            android:gravity="center"
            android:textColor="#bc9842"
            android:textSize="20dp"/>

        <!--<com.mikhaellopez.circularimageview.CircularImageView-->
        <!--android:id="@+id/logo"-->
        <!--android:layout_width="110dp"-->
        <!--android:layout_height="110dp"-->
        <!--android:layout_marginTop="16dip"-->
        <!--app:civ_border_color="#EEEEEE"-->
        <!--app:civ_border_width="1dp"-->
        <!--android:src="@drawable/eduseron"-->
        <!--app:civ_shadow="true"-->
        <!--android:layout_gravity="center"-->
        <!--app:civ_shadow_radius="2"-->
        <!--app:civ_shadow_color="#000000"/>-->

        <ImageView
            android:id="@+id/logo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dip"
            android:src="@drawable/eduseron"
            android:layout_gravity="center"
            />
        <TextView
            android:id="@+id/usernme_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textColor="#ffffff"
            android:textSize="15sp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/prem"
                android:gravity="center"
                android:src="@drawable/preimg"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rectangle_bg_black">
            <!-- <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_marginTop="20dp"
                 android:orientation="horizontal"
                 android:background="@drawable/rectangle_edit_text"
                 android:layout_marginRight="10dp"
                 android:layout_marginLeft="10dp"
                 android:layout_height="wrap_content">-->

            <TextView
                android:id="@+id/email_txt"
                android:layout_width="match_parent"
                android:text="Gmail"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:id="@+id/view1"
                android:background="#ffffff"
                android:layout_marginTop="10dp"/>

            <!--   <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_marginTop="10dp"
                   android:orientation="horizontal"
                   android:layout_marginRight="10dp"
                   android:layout_marginLeft="10dp"
                   android:background="@drawable/rectangle_edit_text"
                   android:layout_height="wrap_content">-->

            <TextView
                android:id="@+id/home_txt"
                android:layout_width="match_parent"
                android:text="Home"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/mobile_txt"
                android:layout_width="match_parent"
                android:text="Mobile"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/rectangle_bg_black">
            <TextView
                android:id="@+id/gender_txt"
                android:layout_width="match_parent"
                android:text="Gender"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/state_txt"
                android:layout_width="match_parent"
                android:text="State"
                android:textColor="#ffffff"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_marginTop="10dp"

                android:layout_height="wrap_content" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#ffffff"
                android:layout_marginTop="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/song_credit_txt"
                    android:layout_width="wrap_content"
                    android:text="Song Credits Left :"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="30 Credits"
                    android:textSize="18dp"
                    android:textColor="#bc9842"/>
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#bc9842"
            android:textColor="#ffffff"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="24dp"
            android:padding="12dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/forgotxt"
            android:layout_marginLeft="30dp"
            android:text="Edit Profile"/>

    </LinearLayout>
</ScrollView>